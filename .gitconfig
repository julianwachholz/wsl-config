[core]
	pager = less -FRSX
	editor = nano
	excludesfile = ~/.gitignore_global

[color]
	ui = auto

[alias]
	s = status
	c = commit
	recommit = !git commit -eF $(git rev-parse --git-dir)/COMMIT_EDITMSG
	co = checkout
	com = checkout master
	d = diff
	b = branch
	p = push
	div = divergence
	pom = push origin master
	fa = fetch --all
	aa = add --all
	ua = reset HEAD
	l = log --graph --abbrev-commit --date=relative
	la = !git l --all
	r = !git --no-pager l -20
	ra = !git r --all
	head = !git l -1
	h = !git head

[merge]
	log = true
	stat = true

[branch]
	autoseupmerge = always

[format]
	pretty = format:%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%an %cr)%Creset

[push]
	default = simple

[commit]
	gpgsign = true
